<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/stock_item_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/stock_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/stock_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock_item_symbol"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/additional_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock_item_name"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/stock_item_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/ask"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/stock_item_bid"
                android:layout_below="@id/stock_item_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bid"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/stock_item_change"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:text="@string/change"
                android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>